<configuration>
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <authentication mode="Forms">
      <forms loginUrl="~/Views/Admin/SignIn" name="BookStoreAuthenticationCookie" timeout="2880" />
    </authentication>
  </system.web>
  <connectionStrings>
    <add name="BookStore" connectionString="Server=.\SQLEXPRESS; Initial Catalog=BookStore; Integrated Security=True" providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>
